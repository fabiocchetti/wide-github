{

  "description": "Makes GitHub layout wide on Mozilla Firefox.",
  "manifest_version": 2,
  "name": "Wide GitHub",
  "version": "1.2.0",
  "homepage_url": "https://github.com/fabiocchetti/widegithub",
  "icons": {
    "128": "icons/widegithub-128.png"
  },

  "content_scripts": [
    {
      "css": ["style.css"],
      "matches": ["*://github.com/*"],
      "include_globs": ["*://*github*.com/*", "*://*github*.io/*"],
      "exclude_globs": ["*://*github*.com/*/projects/*", "*://*github*.io/*/projects/*"],
      "run_at" : "document_start"
    }
  ]

}
