{

  "description": "Makes GitHub layout wide, fluid and responsive.",
  "manifest_version": 2,
  "name": "Wide GitHub",
  "version": "1.0.1",
  "homepage_url": "https://github.com/fabiocchetti/widegithub",
  "icons": {
    "128": "icons/widegithub-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "css": ["style.css"],
      "run_at" : "document_start"
    }
  ]

}
